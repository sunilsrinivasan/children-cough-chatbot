    "consult_doctor": {
      "message": "⚠️ Please consult your doctor immediately."
    },
    "mild_cough_info": {
      "message": "Mild cough not disturbing feeds can be ignored. If persistent or severe, consult your doctor."
    },
    "oil_bath_info": {
      "message": "Avoid oil baths if child is coughing. Monitor mild cough, consult doctor if severe."
    },
    "choking_info": {
      "message": "Hold child over shoulder and burp adequately. If breathing/swallowing difficulty, consult doctor immediately."
    },
    "fever_info": {
      "message": "If fever, give Paracetamol drops (40 mg = 8 drops every 6 hours). Consult doctor if cough persists."
    },
    "urine_watch_info": {
      "message": "Monitor urine output closely, continue feeds (breast/formula). Consult doctor if cough persists or child looks unwell."
    },
    "cough_care_6_12": {
      "message": "👉 Alerid syrup (Cetirizine) 2.5 ml at night × 3 days\n👉 Levolin syrup 2.5 ml twice daily × 3 days\n⏱️ If cough > 3 days or child looks weak → consult doctor.\n💧 Give plenty of liquids, avoid fruit juices/cool drinks."
    },
    "cough_care_1_3": {
      "message": "👉 Alerid syrup 5 ml at night × 3 days\n👉 Levolin syrup 2.5 ml thrice daily × 3 days\n⏱️ If cough > 3 days or child looks weak → consult doctor.\n💧 Liquids encouraged, avoid juices/cool drinks."
    },
    "cough_care_3_5": {
